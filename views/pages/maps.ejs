<html>
<head>

  <title>Google Maps Multiple Markers</title>
  <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
</head>
<body>
  <div class="container">
    <%- include header.ejs %>
  <div id="map" style="height: 400px; width: 1140px;">
<script type="text/javascript">
    var locations = [
      ['Jaydev Vihar', 20.2997267, 85.8172637, 4],
      ['Bhadrak', 21.0582737, 86.4958396, 5],
      ['Jeypore', 18.8606126, 82.5510469, 3],
      ['Khorda', 20.1934552, 85.6332093, 2],
      ['Cuttack', 20.462521, 85.8829895, 1]
    ];

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 7,
      center: new google.maps.LatLng(20.20, 85.82),
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) {
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(locations[i][1], locations[i][2]),
        map: map
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent(locations[i][0]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
  </script>
</div>
</div>
<div class="container">
  <%- include footer.ejs %>
</div>
</body>
</html>
