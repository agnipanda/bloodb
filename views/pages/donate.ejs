<div class="container">
  <%- include header.ejs %>
       <div class = "col-sm-6 col-lg-6 col-md-6" style="background-color:#FFF8A4">
      <form id ="regform" action = "/donate" method = "post" style="margin:0; padding:0">
        <div class="form-group">
          <label>First Name</label>
          <input type="text" name="fname" style="text-align:center" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Last Name</label>
          <input type="text" name="lname" style="text-align:center" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Age</label>
          <input type="text" name="age" style="text-align:center" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Phone Number</label>
          <input type="text" name="number" style="text-align:center" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="text" name="email" style="text-align:center" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Place</label>
          <input type="text" name="place" style="text-align:center" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Gender</label>
          <input type="text" name="gender" style="text-align:center" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Blood Group</label>
          <input type="text" name="bgroup" style="text-align:center" class="form-control" required>
        </div>

        <div class="form-group text-right">
          <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </div>
      </form>
    </div>
    <div class="col-md-6 col-lg-6 col-sm-6" style="background-image:url('images/share.jpg'); background-size:contain; background-size:cover;">
      <div style="height:680px">
      </div>
    </div>
  </div>
<%-include footer.ejs %>
